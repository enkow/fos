<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 2 | Log in</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    {% stylesheets '@bootstrap_css' '@AppBundle/Resources/public/css/*' '@admin_css' '@datatables_css' '@sweetalert_css' '@icheck_css' %}
      <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}"/>
    {% endstylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
  </head>
  <body class="hold-transition login-page">
    <div class="login-box">
      <div class="login-logo">
        <a href="../../index2.html"><b>Admin</b>LTE</a>
      </div>

      <div class="login-box-body">
        <p class="login-box-msg">Sign in to start your session</p>
        <form action='{{ path("fos_user_security_check") }}' method="post">
          {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
          {% endif %}
          <div class="form-group has-feedback">
            <input type="text" id="username" class="form-control" placeholder="Login" name="_username" value="{{ last_username }}" required="required" />
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
          </div>
          <div class="form-group has-feedback">
            <input type="password" id="password" class="form-control" name="_password" required="required" placeholder="Password" />
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
          </div>
          <div class="row">
            <div class="col-xs-8">
              <div class="checkbox icheck">
                <label>
                  <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> Remember Me
                </label>
              </div>
            </div>

            <div class="col-xs-4">
              <input type="submit" id="_submit" name="_submit" value="Sign in" class="btn btn-primary btn-block btn-flat" />
            </div>
          </div>
        </form>
      </div>
      {% if error %}
        <div class="callout callout-danger col-sm-12 text-center" role="alert">
          {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
      {% endif %}
    </div>

    {% javascripts '@jquery' '@bootstrap_js' '@admin_js' '@datatables_js' '@sweetalert_js' '@icheck_js' %}
      <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
      $(function () {
        $('input').iCheck({
          checkboxClass: 'icheckbox_square-blue',
          radioClass: 'iradio_square-blue',
          increaseArea: '20%' // optional
        });
      });
    </script>
  </body>
</html>
